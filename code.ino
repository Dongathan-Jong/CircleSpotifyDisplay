Adafruit_GC9A01A tft(CS,DC,MOSI,SCLK,RST);

Spotify sp(CLIENT_ID, CLIENT_SECRET);

void setup() 
{
  tft.begin();
  tft.setRotation(0);
  tft.fillScreen(GC9A01A_BLACK);
  tft.setFont(&FreeMono12pt7b);
  tft.drawBitmap(60,60, spotifyLogo, 120,120,GC9A01A_GREEN);
  Serial.begin(115200);
  Serial.println("Initializing display");

  WiFi.begin(SSID, PASSWORD);
  Serial.println("");

  while(WiFi.status() != WL_CONNECTED)
  {
    delay(500);
    Serial.print(".");
  }


  Serial.println();
  Serial.print(WiFi.localIP());
  sp.begin();

  while(!sp.is_auth())
  {
    sp.handle_client();
  }

  Serial.println("Authed");

  
}

void loop() 
{
  checkNewInfo();

  delay(1000);
}

void checkNewInfo()
{
  currentTrackName = sp.current_track_name();
  currentArtistName = sp.current_artist_names();
  
  if(lastTrackName != currentTrackName && currentTrackName != "Something went wrong" && currentTrackName != "null")
  {
    
    lastTrackName = currentTrackName;

    Serial.print("track: ");
    Serial.println(lastTrackName);
    
    updateScreen();
  }


  if(lastArtistName != currentArtistName && currentArtistName != "Something went wrong" && currentArtistName != "null")
  {
    lastArtistName = currentArtistName;
    Serial.print("Artist: ");
    Serial.println(lastArtistName);
    
    updateScreen();
  }
}

void updateScreen()
{
  tft.fillScreen(GC9A01A_BLACK);
  tft.setTextSize(1);
  tft.setCursor(15,100);
  tft.print(lastTrackName);
}
